{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "unoPort",
      "type": "promptString",
      "description": "Arduino Uno COM port (e.g. COM9)",
      "default": "COM9"
    },
    {
      "id": "unoBaud",
      "type": "pickString",
      "description": "Upload baud rate (try 115200 first; use 57600 if sync fails)",
      "options": [
        "115200",
        "57600"
      ],
      "default": "115200"
    }
  ],
  "tasks": [
    {
      "label": "Upload HEX: lab2_task1.hex (Uno)",
      "type": "shell",
      "command": "C:\\Program Files (x86)\\Arduino\\hardware\\tools\\avr\\bin\\avrdude.exe",
      "args": [
        "-C",
        "C:\\Program Files (x86)\\Arduino\\hardware\\tools\\avr\\etc\\avrdude.conf",
        "-v",
        "-p",
        "atmega328p",
        "-c",
        "arduino",
        "-P",
        "${input:unoPort}",
        "-b",
        "${input:unoBaud}",
        "-D",
        "-U",
        "flash:w:${workspaceFolder}\\lab2_task1.hex:i"
      ],
      "problemMatcher": []
    },
    {
